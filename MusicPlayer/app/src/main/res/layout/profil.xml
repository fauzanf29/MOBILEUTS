<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".profil">


    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"


        android:layout_marginTop="20dp"
        android:layout_marginEnd="164dp"
        android:text="NIM     :   00000029867"
        android:textColor="#000000"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nim"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:textColor = "#000000"
        android:text="Nama  :   Fauzan Fasya Mingkasalam"
        />
    <TextView
        android:id="@+id/kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:textColor = "#000000"
        android:text="Kelas   :  FL"
        />
    <TextView
        android:id="@+id/ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kelas"
        android:text="Referensi : "
        android:textColor = "#000000"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/ref1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ref"
        android:text="1. Web : "
        android:textColor = "#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ref1"
        android:layout_marginStart="14dp"
        android:text="https://www.11zon.com/zon/android/login-page-in-android-studio-source-code.php"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="43dp"
        android:layout_height="92dp"
        android:text="Back" />


</RelativeLayout>